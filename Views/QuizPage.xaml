<Page x:Class="PokeHelper.Views.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PokeHelper.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="QuizPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/PokeBackground.png" 
                        Stretch="UniformToFill"
                        RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid.Resources>
            <Style x:Key="RoundedButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="3"/>
                <Setter Property="BorderBrush" Value="White"/>

                <!-- Allow hover transform -->
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                                CornerRadius="20"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                                <!-- Gradient Background with bound top color -->
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="{Binding Background.(SolidColorBrush.Color), RelativeSource={RelativeSource TemplatedParent}}" Offset="0"/>
                                        <GradientStop Color="#333333" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <!-- Hover: Grow to 105% -->
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                         To="1.05" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                         To="1.05" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                         To="1" Duration="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                         To="1" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <DropShadowEffect x:Key="DropShadow"
                      Color="Black"
                      BlurRadius="10"
                      ShadowDepth="3"/>

            <Style x:Key="QuitButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#FF4CAF50" />
                <!-- Green Background -->
                <Setter Property="Foreground" Value="White" />
                <!-- White text -->
                <Setter Property="FontSize" Value="18" />
                <!-- Larger font size -->
                <Setter Property="FontWeight" Value="Bold" />
                <!-- Bold text -->
                <Setter Property="BorderBrush" Value="DarkGreen" />
                <!-- Dark green border -->
                <Setter Property="BorderThickness" Value="2" />
                <!-- Border thickness -->
                <Setter Property="Padding" Value="15,10" />
                <!-- Padding inside button -->
                <Setter Property="Margin" Value="10" />
                <!-- Margin for spacing around the button -->
                <Setter Property="Width" Value="250" />
                <!-- Fixed width for consistency -->
                <Setter Property="Height" Value="75" />
                <!-- Fixed height for consistency -->

                <!-- Template of the Button with a Border that has a CornerRadius -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20">
                                <!-- Rounded corners -->
                                <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <!-- Hover effect -->
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#81C784" />
                        <!-- Lighter green on hover -->
                        <Setter Property="BorderBrush" Value="#66BB6A" />
                        <!-- Lighter border on hover -->
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <!-- Quit Button in the top-left corner -->
        <Button Content="Quit Game" Width="200" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Click="QuitButton_Click" Margin="10" Style="{StaticResource QuitButtonStyle}"/>

        <!-- Pokémon Image and Name Section -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="200, 100">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Pokémon Image -->
            <Image x:Name="PokemonSpriteImage" Width="Auto" Height="550" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1" 
                   RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True"/>

            <!-- Pokémon Info Box (left center) -->
            <Border             
                x:Name="DefenderInfoBox"
                CornerRadius="15"
                Padding="10"
                Margin="30"
                Grid.Column="0"
                BorderBrush="White"
                BorderThickness="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">

                <Border.Background>
                    <LinearGradientBrush x:Name="DefenderGradient" StartPoint="0,0" EndPoint="1,1">
                        <GradientStop x:Name="Type1Stop" Color="Gray" Offset="0"/>
                        <GradientStop x:Name="Type2Stop" Color="DarkGray" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock x:Name="PokemonNameTextBlock" 
                               Text="Pokemon Name Here:"
                        FontSize="36"
                        FontWeight="Bold"
                        Foreground="White"
                        Margin="0,0,0,5"/>

                    <TextBlock x:Name="DefenderTypesTextBlock"
                        FontSize="24"
                        Foreground="White"
                        Margin="0,0,0,5"/>

                    <TextBlock 
                        FontSize="24"
                        Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>


        <!-- Move Background Panel -->
        <Border x:Name="MoveInfoBorder"
            Grid.Row="1"
            BorderBrush="White"
            BorderThickness="4"
            CornerRadius="15"
            Width="395"
            Height="280"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="10"
            Grid.RowSpan="2">

            
            
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#E0E0E0" Offset="0"/>
                    <GradientStop Color="#B0B0B0" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <!-- Move Name and Type -->
                <TextBlock x:Name="MoveNameTextBlock" 
                   Text="Move Name" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Margin="0,10,0,0"/>

                <TextBlock x:Name="MoveTypeTextBlock" 
                   Text="Move Type" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="28" 
                   Margin="0,5,0,0"/>

                <!-- PP Display -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
                    <Border BorderBrush="Black" BorderThickness="1" Width="60" Height="45" VerticalAlignment="Center">
                        <TextBlock Text="PP" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" />
                    </Border>
                    <TextBlock Name="PPTextBlock" Text="15/15" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="23" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>


        <!-- Container for holding the Effectiveness response buttons-->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10" HorizontalAlignment="Left" Width="1500" VerticalAlignment="Bottom" Height="280">
            <TextBlock Text="Select Effectiveness:"
                FontSize="48"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,10"
                TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3"/>
                </TextBlock.Effect>
            </TextBlock>

            <WrapPanel HorizontalAlignment="Center" Margin="0,5">

                <Button Content="0x" Width="225" Height="130" Margin="5" Click="EffectivenessButton_Click"
            Background="Black" Foreground="White" Style="{StaticResource RoundedButtonStyle}"/>

                <Button Content=".25x" Width="225" Height="130" Margin="5" Click="EffectivenessButton_Click"
            Background="#8B0000" Foreground="White" Style="{StaticResource RoundedButtonStyle}"/>

                <Button Content=".5x" Width="225" Height="130" Margin="5" Click="EffectivenessButton_Click"
            Background="Red" Foreground="White" Style="{StaticResource RoundedButtonStyle}"/>

                <Button Content="1x" Width="225" Height="130" Margin="5" Click="EffectivenessButton_Click"
            Background="Gray" Foreground="White" Style="{StaticResource RoundedButtonStyle}"/>

                <Button Content="2x" Width="225" Height="130" Margin="5" Click="EffectivenessButton_Click"
            Background="#90EE90" Foreground="Black" Style="{StaticResource RoundedButtonStyle}"/>

                <Button Content="4x" Width="215" Height="130" Margin="5" Click="EffectivenessButton_Click"
            Background="DarkGreen" Foreground="White" Style="{StaticResource RoundedButtonStyle}"/>

            </WrapPanel>
        </StackPanel>


    </Grid>
</Page>
